<div class="container">
  <div class="row my-5">
    <h2>商品詳細</h2>
  </div>
    <div class="row">
        <div class="col-md-3">
          <%= attachment_image_tag(@item, :image, :fill, 200, 200) %>
        </div>
          <div class="col-md-5">
    	      <table class="table table-borderless">
    		        <tr>
                  <td>商品名</td>
                  <td><%= @item.name %></td>
                </tr>
              
                <tr>
                  <td>商品説明</td>
                  <td><%= @item.description %></td>
                </tr>
              
                <tr>
                  <td>ジャンル</td>
                  <td><%= @item.genre.name %></td>
                </tr>
                
                
                <tr>
                  <td>税込価格(税抜価格)</td>
                  <td>
                     <%= @item.price %>(<%= (@item.price * 1.1).floor %>)円
                  </td>
                </tr>
              
                <tr>
                  <td>販売ステータス</td>
                  <td>
                  <% if @item.sales_status == true %>
                    <%= "販売中" %>
                  <% else %>
                    <%= "販売停止中" %>
                  <% end %>
                  </td>
                </tr>
            </table>
            <div class="actions col-xs-9">
            <div class="btn-group my-4" >
              <td><%= link_to '編集', edit_master_item_path(@item), class: "btn btn-sm btn-success save col-xs-4" %>
            </div>
            </div>
          </div>
     </div>
</div>