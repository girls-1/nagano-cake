<div class="container my-5">
  <div class="row">
    <h2>商品詳細</h2>
  </div>
  
    <div class="row">
      <div class="col-md-3 offset-md-3">
        <%= attachment_image_tag(@item, :image, :fill, 200, 200) %>
      </div>
        <div class='col-md-8 offset-md-1'>
  	      <table class='table'>
  		      <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            
            <tr>
              <td>商品説明</td>
              <td><%= @item.description %></td>
            </tr>
            
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            
            
            <tr>
              <td>税込価格(税抜価格)</td>
              <td>
                 <%= @item.price %>(<%= (@item.price * 1.1).floor %>)円
              </td>
            </tr>
            
            <tr>
              <td>販売ステータス</td>
              <td>
              <% if @item.sales_status == true %>
                <%= "販売中" %>
              <% else %>
                <%= "販売停止中" %>
              <% end %>
              </td>
            </tr>
            
          　<td><%= link_to '編集', edit_master_item_path(@item), class: "btn btn-sm btn-success" %></td>
      　　</table>
      </div>
    </div>