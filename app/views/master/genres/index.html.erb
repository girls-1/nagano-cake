<h3>ジャンル一覧・追加</h3>

<%= form_with model:@genre,url:'/master/genres', local:true do |f| %>

 ジャンル名
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
  
<% end %>
<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
      </td>
      <td>
        <%= link_to "編集する", edit_master_genre_path(genre.id), class: 'btn btn-default' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>