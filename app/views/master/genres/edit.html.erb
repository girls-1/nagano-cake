<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="offset-1 my-5">ジャンル編集</h4>
　　　<%= form_with model:@genre, url:"/master/genres/#{@genre.id}", local:true do |f| %>
  　　<div class="field row form-group mb-5">
          <%= f.label :"ジャンル名", class: "col-3" %>
          <%= f.text_field :name, autofocus: true, class: "col-4 form-control" %>
          <%= f.submit '保存', class: "btn btn-lg btn-success offset-2" %>
      </div>
　　　<% end %>
    </div>
  </div>
</div>
