<div class='container'>
  <div class="row">
    <div class="col-12">
      <h4 class="row offset-1 my-5">新規会員登録</h4>
      <%= form_with model: @member, url: members_sign_up_path, local: true do |f| %>
       <%= render "member/shared/error_messages", resource: resource %>
        <div class="field form-group row">
          <%= f.label :"名前", class: "col-3" %>
          <%= f.label :"(姓)", class: "col-1" %>
          <%= f.text_field :last_name, autofocus: true, placeholder:"令和", class: "col-3 form-control" %>
          <%= f.label :"(名)", class: "col-1" %>
          <%= f.text_field :first_name, autofocus: true, placeholder:"道子",class: "col-3 form-control" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"フリガナ", class: "col-3" %>
          <%= f.label :"(セイ)", class: "col-1" %>
          <%= f.text_field :last_name_kana, autofocus: true, placeholder:"レイワ", class: "col-3 form-control" %>
          <%= f.label :"(メイ)", class: "col-1" %>
          <%= f.text_field :first_name_kana, autofocus: true, placeholder:"ミチコ",class: "col-3 form-control" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"メールアドレス", class: "col-4" %>
          <%= f.email_field :email, autofocus: true, class: "col-3 form-control",  placeholder:"sample@example.com" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"郵便番号(ハイフンなし)", class: 'col-4' %>
          <%= f.number_field :post_code, class: 'col-3 form-control', placeholder:"0000000" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"住所", class: "col-4" %>
          <%= f.text_field :address, autofocus: true, class: "col-7 form-control", placeholder:"東京都渋谷区代々木神園町０－０" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"電話番号", class: "col-4" %>
          <%= f.number_field :phone_number, class: "col-3 form-control", placeholder:"00000000000" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"パスワード(6文字以上)", class: "col-4" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-3 form-control" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"パスワード(確認用)", class: "col-4" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3 form-control" %>
        </div>
        <div class="row">
          <div class="col-4"></div>
          <%= f.submit "新規登録",class: 'btn btn-success btn-lg' %>
        </div>
      <% end %>
      <div class="offset-1 my-4">
        <h4>既に登録済みの方</h4>
        <p class="mt-3"><%= link_to "こちら", members_sign_in_path %> からログインしてください。</p>
    </div>
  </div>
</div>