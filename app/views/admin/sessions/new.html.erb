<div class='container'>
  <div class='row'>
    <div class="col-12">
      <h3 class="my-5">管理者ログイン</h3>
      <div class="row justify-content-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-5">
          <%= f.label :メールアドレス, class: "mr-3"%>
          <%= f.text_field :email, autofocus: true, size:"50", class: "name" %>
        </div>
        <div class="field">
          <%= f.label :パスワード, class: "mr-5" %>
          <%= f.password_field :password, size:"50", autocomplete: "off", class: "password" %>
        </div>
        <div class="actions text-center mt-4">
          <%= f.submit "ログイン" ,class: 'btn btn-primary px-4'%>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
