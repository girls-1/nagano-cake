<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navber-dark py-1" style="background-color:#ffffcc;">
        <div class="container-fluid">
        <div class="offset-1">
          <%= link_to root_path, class: "navbar-brand", local: true do %>
          <%= image_tag 'logo.png', size: "150x100"%>
          <h5>　ながのCAKE</h5>
          <% end %>
        </div>
          <ul class="navbar-nav flex-row ">
            <% if member_signed_in? %>
            　<div class="mt-2 mr-5">ようこそ、<%= current_member.last_name %>さん！</div>
              <li class="mr-3"><%= link_to "マイページ", members_path, class: "nav-link text-dark" %></li>
              <li class="mr-3"><%= link_to "商品一覧", items_path, class: "nav-link text-dark" %></li>
              <li class="mr-3"><%= link_to "カート", cart_items_path, class: "nav-link text-dark" %></li>
              <li><%= link_to "ログアウト", destroy_member_session_path, method: :delete, class: "nav-link text-dark" %></li>
            <% elsif admin_signed_in?%>
              <li class="mr-3"><%= link_to "商品一覧", master_items_path, class: "nav-link text-dark" %></li>
              <li class="mr-3"><%= link_to "会員一覧", master_members_path, class: "nav-link text-dark" %></li>
              <li class="mr-3"><%= link_to "注文履歴一覧", master_root_path, class: "nav-link text-dark" %></li>
              <li class="mr-3"><%= link_to "ジャンル一覧", master_genres_path, class: "nav-link text-dark" %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link text-dark" %></li>
            <% else %>
              <li class="mr-3"><%= link_to "About", about_path, class: "nav-link text-dark" %></li>
              <li class="mr-3"><%= link_to "商品一覧", items_path, class: "nav-link text-dark" %></li>
              <li class="mr-3"><%= link_to "新規登録", new_member_registration_path, class: "nav-link text-dark" %></li>
              <li><%= link_to "ログイン", new_member_session_path, class: "nav-link text-dark" %></li>
            <% end %>
          </ul>
        </div>
      </nav></nav>
    </header>
    <%= yield %>
    <footer class="fixed-bottom">
      <div class="footer" style="background-color:#ffffcc;">
        <div class="row">
          <div class="py-4"></div>
        </div>
      </div>
    </footer>
  </body>
</html>
