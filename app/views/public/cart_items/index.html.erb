<div class="container">
  <div class="row">
    <h3>ショッピングカート</h3>
    <%= link_to 'カートを空にする', method: :delete, "data-confirm" => "カート内を空にしますか？", class: "btn btn-sm btn-danger" %>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.price %></td>
            <td><%= cart_item.count %></td>
            <td></td>
            <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_to '買い物を続ける', class: "btn btn-sm btn-success" %>
    <table class="table table-bordered">
      <tbody>
        <th>合計金額</th>
        <td></td>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_to '情報入力に進む', class: "btn btn-sm btn-success" %>
  </div>
</div>