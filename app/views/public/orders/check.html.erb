<h3>注文情報確認</h3>
<%= form_with model:@order, url:orders_path, local:true do |f| %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <% current_member.cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag cart_item.item, :image %>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.price * 1.1 %>
      </td>
      <td>
        <%= cart_item.count %>
      </td>
      <td>
        <%= cart_item.item.price * 1.1 * cart_item.count %>
        <% @total += cart_item.item.price * 1.1 * cart_item.count %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

<table class="table table-bordered">
  
  <tbody>
    <tr>
      <td>
        送料
      </td>
      <td>
        <%= 800 %>
      </td>
    </tr>
    <tr>
      <td>
        商品合計
      </td>
      <td>
        <%= @total.to_s(:delimited) %>
      </td>
    </tr>
    <tr>
      <td>
        <%= <%= (@total+800).to_s(:delimited) %> %>
      </td>
    </tr>
  </tbody>
</table>


支払方法 <%= @order.payment_method %>
お届け先　〒<%= @order.post_code %> <%= @order.address %> <%= @order.name %> 

<%= f.hidden_field :payment_method ,:value => @order.payment_method %>
<%= f.hidden_field :shipping ,:value => 800 %>
<%= f.hidden_field :address,:value => @order.address %>
<%= f.hidden_field :post_code,:value => @order.post_code %>
<%= f.hidden_field :name,:value => @order.name %>
<%= f.hidden_field :final_price ,:value => @total %>

<%= f.submit "購入を確定する", class: "btn btn-success" %>
<% end %>