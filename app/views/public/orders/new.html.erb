<h3>注文情報入力</h3>
<%= form_with model: @order, url:"/orders/check", method: :post do |f| %>

  <div>
    支払方法
    <div>
      <%= f.radio_button :payment_method, 0 %> クレジットカード
    </div>
    <div>
      <%= f.radio_button :payment_method, 1 %>　銀行振込
    </div>
  </div>
  <div>
    お届け先
    <div>
      <%= f.radio_button :address_number, 0 %> ご自身の住所
      <%= current_member.post_code %> <%= current_member.address %>
      <%= current_member.first_name %> <%= current_member.last_name %>
    </div>
    <div>
      <%= f.radio_button :address_number, 1 %> 登録先住所から選択
      <%= f.collection_select :deliverise_id, Delivery.all, :id, :post_code, :address, :name, { prompt: '選択してください' }, class: 'form-control' %>
    </div>
    <div>
      <%= f.radio_button :address_number, 2 %> 新しいお届け先
      郵便番号(ハイフンなし)<%= f.text_field :post_code %>
      住所<%= f.text_field :address %>
      宛名<%= f.text_field :name %>
    </div>
  </div>
   <%= f.submit '確認画面に進む', class:"btn btn-outline-primary" %>
<% end %>