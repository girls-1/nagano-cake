<div class = "contener my-3" >
  <div class = "row" >
    <div class = "col-8 mx-auto" >
      <h3>注文情報入力</h3>
      <%= form_with model: @order, url:"/orders/check", local:true, method: :post do |f| %>

        <div class = "form-group">
          <h5><strong>支払方法</strong></h5>
          <div style="margin-left: 40px">
            <%= f.radio_button :payment_method, 0, checked: true %> <%= f.label :クレジットカード %>
          </div>
          <div style="margin-left: 40px">
            <%= f.radio_button :payment_method, 1 %>　<%= f.label :銀行振込 %>
          </div>
        </div>
        <div class = "form-group">
          <h5><strong>お届け先</strong></h5>
          <div style="margin-left: 40px">
            <%= f.radio_button :address_number, 0, checked: true %> <%= f.label :ご自身の住所 %>
            <div style="margin-left: 30px">〒<%= current_member.post_code %> <%= current_member.address %></div>
            <div style="margin-left: 30px"><%= current_member.first_name %> <%= current_member.last_name %></div>
          </div>
          <div style="margin-left: 40px">
            <%= f.radio_button :address_number, 1 %> <%= f.label :登録先住所から選択 %>
            <div style="margin-left: 30px"><%= f.collection_select :deliverise_id, @deliveries, :id, :member_info, { prompt: '選択してください' }, class: 'form-control col-8' %></div>
          </div>
          <div style="margin-left: 40px">
            <div class = table ></div>
            <%= f.radio_button :address_number, 2 %> <%= f.label :新しいお届け先 %>
            <div class = "row">
              <div style="margin-left: 30px">郵便番号(ハイフンなし)</div>
              <div class = "col-3"><%= f.text_field :post_code, placeholder:"0000000" %></div>
            </div>
            <div class = "row my-1">
              <div style="margin-left: 30px">住所</div>
              <div class = "col-6"><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", class: 'col-10' %></div>
            </div>
            <div class = "row my-1">
              <div style="margin-left: 30px">宛名</div>
              <div class = "col-3"><%= f.text_field :name, placeholder:"令和道子" %></div>
            </div>
          </div>
        </div>
         <%= f.submit '確認画面に進む', class:"btn btn_success" %>
      <% end %>
    </div>
  </div>
</div>