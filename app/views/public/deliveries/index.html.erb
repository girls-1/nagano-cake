<div class='container'>
  <div class='row'>
    <div class="col-md-8 mt-3 px-5">
      <h4>配送先登録 / 一覧</h4>
      <%= form_with model:@delivery, local:true do |f| %>
        <div class="form-group form-inline">
          <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :post_code, class: 'form-control' %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :name, "宛名" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
          <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-8 mt-5 px-5">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @deliveries.each do |delivery| %>
          <tr>
            <td><%= @delivery.post_code %></td>
            <td><%= @delivery.address %></td>
            <td><%= @delivery.name %></td>
            <td>
              <%= link_to '編集する', edit_delivery_path(:id), class: "btn btn-sm btn-success" %>
              <%= link_to '削除する', class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>