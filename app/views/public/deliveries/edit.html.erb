<div class='container'>

      <h4 class="mt-3">配送先編集</h4>

      <%= form_with model:@delivery, local:true do |f| %>
        <div class="form-group row mt-3">
          <%= f.label :post_code, "郵便番号(ハイフンなし)", class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-3">
            <%= f.text_field :post_code, class: 'form-control', placeholder:"0000000" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :address, "住所", class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-7">
            <%= f.text_field :address, class: 'form-control', placeholder:"東京都代々木神園町0-0" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :name, "宛名", class: 'col-sm-4 col-form-label' %>
          <div class="col-sm-3">
            <%= f.text_field :name, class: 'form-control', placeholder:"令和道子" %>
          </div>
          <div class="col-auto my-1 end-0">
            <%= f.submit '変更内容を保存', class: "btn btn-sm btn-success" %>
          </div>
        </div>
      <% end %>

</div>