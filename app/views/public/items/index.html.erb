<div class="container">
  <div class="row my-3">
    <div class="col-3"></div>
    <div class="col-8 offset-md-1">
      <h3>商品一覧　<small>全<%= @items.total_count %>件</small></h3>
      <div class="d-flex flex-row flex-wrap">
        <% @items.each do |item| %>
          <div class="d-flex flex-column mr-5 mt-3">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag(item, :image,:fill, 100, 100) %>
              <% end %>
              <%= item.name %>
              <span>¥<%= item.taxin_price.floor.to_s(:delimited) %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= paginate @items %>
</div>
