<div class="container">
  <div class="row mt-5">
    <%= render 'master/genres/genre', genres: @genres %>
    <div class="col-8 offset-md-1">
      <h3>商品一覧　<small>全<%= @items.total_count %>件</small></h3>
      <div class="d-flex flex-row flex-wrap">
        <% @items.each do |item| %>
          <div class="d-flex flex-column mr-5 mt-3">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag(item, :image,:fill, 100, 100) %>
              <% end %>
              <%= item.name %>
              <span>¥<%= item.taxin_price.floor.to_s(:delimited) %></span>
              <% if item.sales_status == true %>
                <div class = text-success><strong><%= "販売中" %></strong></div>
              <% else %>
                <div class = text-danger><strong><%= "売り切れ" %></strong></div>
              <% end %>
          </div>
        <% end %>
      </div>
      <div class="m-5">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
