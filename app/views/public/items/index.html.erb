<div class='container'>
  <h3>商品一覧</h3>

      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag(item, :image,:fill, 100, 100) %>
        <% end %>
          <%= item.name %>
          <span>¥<%= item.price %></span>
      <% end %>

  <%= paginate @items %>
</div>